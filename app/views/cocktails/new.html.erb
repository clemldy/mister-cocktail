<h1 class= 'text-center'>Create a New Cocktail</h1>
<br>
<div class= 'container'>
  <%= simple_form_for(@cocktail) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :picture %>

  <%= f.button :submit %>
  <% end %>

  <br>

  <%= link_to 'Home', cocktails_path, {class: "btn btn-default"} %>
</div>
