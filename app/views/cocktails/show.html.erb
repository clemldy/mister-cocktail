<h1 class= 'text-center'><%=@cocktail.name %>'s Recipe</h1>
<br>
<h2 class= 'text-center'>Description :</h2>
<br>
<p class= 'text-center'><%= link_to 'Home', cocktails_path, {class: "btn btn-primary"} %></p>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %>
    <%=dose.ingredient.name %>
  </li>
  <% end %>
</ul>

<div class= 'container'>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>

  <%= f.association :ingredient %>

  <%= f.input :description %>

  <%= f.button :submit %>
  <% end %>
</div>
